            // Add custom logic for drag start if needed
            return game.in_checkmate() === false && game.in_draw() === false &&
                piece.search(/^b/) === -1;
        }

        // Drop logic
        function onDrop(source, target) {
            var move = game.ugly_move({
                from: source,
                to: target,
                promotion: 'q' // NOTE: always promote to a queen for example simplicity
            });

            // Update the position of the pieces on the board
            board.position(game.fen());

            // Add any additional logic you need here

            // Make the best move (you can replace this with your logic)
            makeBestMove();
        }

        // Add more chess.js logic as needed

